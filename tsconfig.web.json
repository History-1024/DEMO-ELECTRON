{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.ts",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts",
    "src/renderer/types/*.d.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "strict": false,
    "types": ["element-plus/global"],
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  }
}
